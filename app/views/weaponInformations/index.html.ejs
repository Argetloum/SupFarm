<div class="hero-unit">
  <h2>All Weapons</h2>
  <%- linkTo('Create a new Weapon', addWeaponPath, {class: 'btn pull-right'}); %>
</div>

<div id="weapons-list">
<% if (weapons) { %>
<% for (var i = 0, ii = weapons.length; i < ii; i++) { %>
  <div class="row list-item" id="weapon-<%= weapons[i].id; %>">
    <div class="span8">
      <h3><%- linkTo(weapons[i].name, weaponPath(weapons[i].id)); %></h3>
    </div>
    <div class="span4">
      <h3><i class="icon-list-alt"></i><%= weapons[i].id; %></h3>
    </div>
  </div>
<% } %>
<% } %>
</div>